div(class="main-container bg-gray-50")
	div(class="container py-12 lg:py-16")
		h2(class="text-3xl lg:text-4xl font-bold mb-12 text-center") Portfolio
		div(class="grid grid-cols-1 sm:grid-cols-2 l:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6")
			each item in portfolioItems
				- var hasLive = item.live && typeof item.live === 'string' && item.live.trim() !== '';
				- var hasSrc = item.src && typeof item.src === 'string' && item.src.trim() !== '';
				- var imageUrl = item.image || 'https://kikeestrada.github.io/kikeestradadev/assets/img/insiders.png';
				if hasLive
					div(class="group block bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 border border-gray-200 hover:border-[var(--base-color)]")
						//- Image Container (clickeable to live project)
						a(href=item.live target="_blank" rel="noopener noreferrer" class="block relative overflow-hidden bg-gray-100 aspect-video")
							img(src=imageUrl alt=item.title class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500")
							//- Overlay on hover
							div(class="absolute inset-0 bg-[var(--base-color)]/0 group-hover:bg-[var(--base-color)]/20 transition-all duration-300")
						//- Content
						div(class="p-5")
							h3(class="text-lg font-bold mb-3 text-gray-900 group-hover:text-[var(--base-color)] transition-colors duration-300")= item.title
							
							//- Project Details (only show if data exists)
							if item.role || item.tech || item.focus
								div(class="space-y-2 mb-4 pb-4 border-b border-gray-100")
									if item.role
										div(class="flex items-start gap-2")
											span(class="text-xs font-semibold text-gray-500 uppercase tracking-wide min-w-[50px]") Role:
											span(class="text-sm text-gray-700 font-medium")= item.role
									if item.tech
										div(class="flex items-start gap-2")
											span(class="text-xs font-semibold text-gray-500 uppercase tracking-wide min-w-[50px]") Tech:
											span(class="text-sm text-gray-700")= item.tech
									if item.focus
										div(class="flex items-start gap-2")
											span(class="text-xs font-semibold text-gray-500 uppercase tracking-wide min-w-[50px]") Focus:
											span(class="text-sm text-gray-700")= item.focus
							
							//- Links Container
							div(class="flex flex-col gap-2")
								//- View Project Link
								a(href=item.live target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm text-gray-500 hover:text-[var(--base-color)] transition-colors duration-300")
									span View Project
									svg(class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24")
										path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7")
								//- Source Code Link (only show if src exists)
								if hasSrc
									a(href=item.src target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-sm text-gray-500 hover:text-[var(--base-color)] transition-colors duration-300")
