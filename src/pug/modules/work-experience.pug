script.
	document.addEventListener('DOMContentLoaded', function() {
		const expandButtons = document.querySelectorAll('.expand-btn');
		
		expandButtons.forEach(button => {
			button.addEventListener('click', function() {
				const targetId = this.getAttribute('data-target');
				const content = document.getElementById(targetId);
				const expandText = this.querySelector('.expand-text');
				const expandIcon = this.querySelector('.expand-icon');
				
				// Cerrar todos los demÃ¡s collapses primero
				expandButtons.forEach(otherButton => {
					if (otherButton !== this) {
						const otherTargetId = otherButton.getAttribute('data-target');
						const otherContent = document.getElementById(otherTargetId);
						const otherExpandText = otherButton.querySelector('.expand-text');
						const otherExpandIcon = otherButton.querySelector('.expand-icon');
						
						if (otherContent && !otherContent.classList.contains('hidden')) {
							otherContent.classList.add('hidden');
							if (otherExpandText) {
								otherExpandText.textContent = 'See More';
							}
							if (otherExpandIcon) {
								otherExpandIcon.classList.remove('rotate-180');
							}
						}
					}
				});
				
				// Ahora manejar el collapse actual
				if (content) {
					if (content.classList.contains('hidden')) {
						// Abrir
						content.classList.remove('hidden');
						if (expandText) {
							expandText.textContent = 'See less';
						}
						if (expandIcon) {
							expandIcon.classList.add('rotate-180');
						}
					} else {
						// Cerrar
						content.classList.add('hidden');
						if (expandText) {
							expandText.textContent = 'See More';
						}
						if (expandIcon) {
							expandIcon.classList.remove('rotate-180');
						}
					}
				}
			});
		});
	});
